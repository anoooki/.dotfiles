#!/bin/bash

THEMES_DIR="$HOME/.config/themes/"
CURRENT_THEME_DIR="$HOME/.config/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
mkdir -p "$(dirname "$CURRENT_THEME_DIR")"
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

mkdir -p ~/.config/btop/themes
ln -snf ~/.config/current/theme/btop.theme ~/.config/btop/themes/current.theme

ln -snf ~/.config/current/theme/neovim.lua ~/.config/nvim/lua/plugins/colorscheme.lua

hyprctl reload
pkill -SIGUSR2 btop
pkill -USR2 waybar 
